{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/*", "src/preload/*", "src/types/**/*"],
  
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node", "@cuppachino/openapi-fetch", "node-fetch-commonjs"],
    "paths": {
      "@/types/*": ["./src/types/*"],
    }
  }
}
